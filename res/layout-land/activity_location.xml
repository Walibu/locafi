<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/border_landscape"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LocationActivity" >

    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_address"
            android:textSize="@dimen/label_text_size" />
    
        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textAddress"
            android:layout_below="@+id/textAddress"
            android:lines="3"
            android:gravity="top"
            android:inputType="textMultiLine|textNoSuggestions"
            android:textSize="@dimen/edit_text_size" >
    
            <requestFocus />
        </EditText>
    
        <Button
            android:id="@+id/buttonClear"
            style="?android:attr/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextAddress"
            android:layout_below="@+id/editTextAddress"
            android:layout_marginTop="10dp"
            android:text="@string/button_clear"
            android:textSize="@dimen/button_text_size"
            android:drawableLeft="@drawable/icon_random" />
        
        <Button
            android:id="@+id/buttonAddress"
            style="?android:attr/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonClear"
            android:layout_below="@+id/buttonClear"
            android:layout_marginTop="5dp"
            android:text="@string/button_getaddress"
            android:textSize="@dimen/button_text_size"
            android:drawableLeft="@drawable/icon_search" />

    </RelativeLayout>

    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context=".MainActivity" >

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textSize="@dimen/title_text_size" />
    
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textSize="@dimen/label_text_size" />

    </RelativeLayout>

</LinearLayout>